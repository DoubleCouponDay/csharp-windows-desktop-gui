<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="csharp_windows_desktop_gui.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                Source="arc_logo.png"
                HeightRequest="95"
                WidthRequest="300"
                Aspect="AspectFit"
                SemanticProperties.Description="Arc logo" />

            <Label
                Text="MAUI Template App for Windows and .NET 8"
                Style="{StaticResource Headline}"
                SemanticProperties.Description="MAUI Template App for Windows and .NET 8" />

            <Label
                Text="Dice Roll Game"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.Description="Dice Roll Game" />

            <Button
                x:Name="dicerollButton"
                Text="Roll Dice" 
                SemanticProperties.Hint="Rolls the dice"
                Clicked="OnRollClicked"
                HorizontalOptions="Fill"
                BackgroundColor="#F37621" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
